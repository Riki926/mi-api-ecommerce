<h1>Productos</h1>

<div class="row">
    {{#each products}}
    <div class="col-md-4 mb-4">
        <div class="card">
            {{#if thumbnails.[0]}}
            <img src="{{thumbnails.[0]}}" class="card-img-top" alt="{{title}}">
            {{/if}}
            <div class="card-body">
                <h5 class="card-title">{{title}}</h5>
                <p class="card-text">{{description}}</p>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">Código: {{code}}</li>
                    <li class="list-group-item">Precio: ${{price}}</li>
                    <li class="list-group-item">Stock: {{stock}}</li>
                    <li class="list-group-item">Categoría: {{category}}</li>
                </ul>
            </div>
        </div>
    </div>
    {{else}}
    <div class="col-12">
        <p>No hay productos disponibles.</p>
    </div>
    {{/each}}
</div>

