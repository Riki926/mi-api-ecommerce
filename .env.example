# ===========================================
# CONFIGURACIÓN DEL ENTORNO - E-COMMERCE API
# ===========================================

# Entorno de desarrollo
NODE_ENV=development

# Configuración del servidor
PORT=8080

# Base de datos MongoDB
MONGODB_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/ecommerce?retryWrites=true&w=majority

# Configuración JWT (Autenticación)
JWT_SECRET=tu_clave_secreta_jwt_muy_segura_aqui_cambiar_en_produccion
JWT_EXPIRE=7d
JWT_COOKIE_EXPIRE=30

# Configuración de Email (SMTP)
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=2525
SMTP_USER=tu_usuario_smtp
SMTP_PASS=tu_password_smtp
SMTP_FROM_EMAIL=noreply@tu-ecommerce.com
SMTP_FROM_NAME=E-commerce App

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Rate Limiting (Limitación de peticiones)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Configuración de seguridad CORS
CORS_ORIGIN=http://localhost:3000

# Subida de archivos
MAX_FILE_UPLOAD=1000000
FILE_UPLOAD_PATH=public/uploads

# Configuración de logs
LOG_LEVEL=dev

# Documentación API
API_DOCS_ENABLED=true
